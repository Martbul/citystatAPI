generator client {
  provider = "go run github.com/steebchen/prisma-client-go"
    output   = "prisma/db"

}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id // Clerk user ID (no @default(cuid()))
  email     String   @unique
  firstName String?
  lastName  String?
  imageUrl  String?
  posts     Post[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Post {
  id        String   @id @default(cuid())
  title     String
  content   String?
  published Boolean  @default(false)
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId  String   // This will be Clerk user ID
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("posts")
}
